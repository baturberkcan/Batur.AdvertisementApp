@{
    Layout = "_Layout";
}
@model List<AdvertisementListDto>

<div class="container my-auto">
    <div class="accordion" id="accordionExample">
        @for (var i = 0; i < Model?.Count; i++)
        {
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading-@Model[i].Id">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse-@Model[i].Id" aria-expanded="@(i==0)" aria-controls="collapse-@Model[i].Id">
                        @Model[i].Title
                    </button>
                </h2>
                <div id="collapse-@Model[i].Id" class="accordion-collapse collapse @(i==0?"show":"")" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        @Model[i].Description

                        <div>
                            @if (User.Identity.IsAuthenticated)
                            {
                                <a href="#">Başvur</a>
                            }
                            else
                            {
                                <div class="alert alert-light text-center lead">
                                    Basvuru yapabilmek için kayıt olmanız gerekmektedir<a href="#">Kayıt ol</a>
                                </div>
                            }

                        </div>


                    </div>
                </div>
            </div>

        }

    </div>
</div>
